---
import PrimaryNavigation from "./PrimaryNavigation.astro";
---

<header class="site-header">
  <div class="container">
    <div class="site-header__inner">
      <a href="/index.html">
        <img aria-hidden="true" src="/assets/images/logo-bookmark.svg" alt="" />
        <p class="sr-only">BOOKMARK SITE</p>
      </a>

      <PrimaryNavigation />
    </div>
  </div>
</header>

<style lang="scss">
  @use "../styles/abstracts" as *;

  .site-header {
    color: $site-header-color;
    padding: $site-header-padding;

    @include mq(medium) {
      padding: $site-header-padding-desktop;
    }

    &__inner {
      display: flex;
      gap: $size-4;
      align-items: $site-header-alignment;
      justify-content: $site-header-jusitifcation-small-screens;

      @include mq(medium) {
        justify-content: $site-header-jusitifcation-large-screens;
      }
    }
  }
</style>
